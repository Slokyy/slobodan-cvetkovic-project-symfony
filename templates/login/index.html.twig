{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}
    <div class="container grid">

        <form action="{{ path('dashboard_login') }}" method="POST" class="form flex">

            {% if error %}
{#                {{ error.messageKey }}#}
                {{ error.messageKey|trans(error.messageData, 'security') }}
            {% endif %}
{#            <img src="./images/universal-logo-big.png" alt="Logo of universal studios thats above the login form">#}

            <div class="heading-group">
                <h1>Login</h1>
            </div>
            <!-- / -->
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <div class="form-group">
                <input type="email" id="email" name="_username" required>
                <label for="email" class="label-name">
                    <span class="content-name">Email</span>
                </label>
            </div>
            <div class="form-group">
                <input type="password" id="password" name="_password" required>
                <label for="password" class="label-name">
                    <span class="content-name">Password</span>
                </label>
                <span class="icon icon-w-xsm icon-eye icon-eye-slash toggle-pwd" id="togglePassword"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Submit">
            </div>

        </form>

    </div>
{% endblock %}
