<section class="slide-container new-user-container" id="new-user-container" data-toggleselector="userSlider">
  <span class="icon icon-md icon-ex slide-ex" data-toggle-close></span>
  {{ form_start(editForm, { 'method': 'PUT', 'attr': {'class': 'slide-form flex'}}) }}
  <h2>Edit User</h2>

  <div class="form-group">
    {{ form_row(editForm.avatar_path, { 'attr': {'class': 'slide-form flex'}}) }}
  </div>

  <div class="form-group">

    {{ form_widget(editForm.first_name) }}
    {{ form_label(editForm.first_name) }}
  </div>
  <div class="form-group">

    {{ form_widget(editForm.last_name) }}
    {{ form_label(editForm.last_name) }}
  </div>
  <div class="form-group">

    {{ form_widget(editForm.street) }}
    {{ form_label(editForm.street) }}
  </div>
  <div class="form-group">

    {{ form_widget(editForm.city) }}
    {{ form_label(editForm.city) }}
  </div>
  <div class="form-group">

    {{ form_widget(editForm.country) }}
    {{ form_label(editForm.country) }}
  </div>
  <div class="form-group">

    {{ form_widget(editForm.email) }}
    {{ form_label(editForm.email) }}
  </div>
  <div class="form-group">

    {{ form_widget(editForm.plainPassword) }}
    {{ form_label(editForm.plainPassword) }}

  </div>

  <div class="form-group">
    {{ form_widget(editForm.roles) }}
    {{ form_label(editForm.roles) }}

  </div>
  <div class="form-group">

    {{ form_widget(editForm.status) }}
    {{ form_label(editForm.status) }}

  </div>
  <div class="form-group">

    {{ form_widget(editForm.bank_acc) }}
    {{ form_label(editForm.bank_acc) }}

  </div>

  <div class="form-group input flex">
    <button class="btn" data-toggle-close>Cancel</button>
    <button type="submit" class="btn btn-small btn-blue">Update</button>
  </div>

  {{ form_end(editForm) }}
</section>
